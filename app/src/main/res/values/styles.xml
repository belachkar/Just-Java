    <!-- Custom App Theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary App color-->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#007986</item>
        <item name="colorAccent">#536DFE</item>
        <!-- Background Buttons color -->
